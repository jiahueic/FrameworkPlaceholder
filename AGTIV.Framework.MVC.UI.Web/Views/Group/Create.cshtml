@using AGTIV.Framework.MVC.UI.ViewModel.Group
@model GroupFormVM

@{
    ViewBag.Title = "Group - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="control-section" style="margin: auto 20px;">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create - Group</h3>
                    </div>
                    <div class="box-body">
                        @Html.Partial("_GroupForm")
                    </div>
                    <div class="box-footer text-right">
                        @Html.EJS().Button("Create").Type("submit").Content("Create").CssClass("e-primary").Render()
                        <a href="@Url.Action("Index")" class="e-btn">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="page-header">
            <h1>
                <i class="fa fa-close"></i> Oops!
            </h1>
        </div>
        <h2>
            <small>An error occurred while processing your request.</small>
        </h2>
        <br />
        <br />
        @if (Model != null && Model.Exception != null)
        {
            <p>@Html.Raw(Model.Exception.Message)</p>
        }
    </div>
</div>

